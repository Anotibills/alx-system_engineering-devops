#:/usr/bin/env bash
#Script for transferring a file to the user's home directory with strict hostkey

# Check for the correct number of parameters
if [ "$#" -lt 3 ]; then
    echo "Usage: $0 PATH_TO_FILE IP USERNAME"
    exit 1
fi

# Extract parameters
file_path="$1"
server_ip="$2"
username="$3"

# Disable strict host key checking for this scp session
scp -o StrictHostKeyChecking=no "$file_path" "$username@$server_ip:~"

# Check the exit status of the scp command
if [ $? -eq 0 ]; then
    echo "File transferred successfully to user's home directory."
else
    echo "File transfer failed."
fi

