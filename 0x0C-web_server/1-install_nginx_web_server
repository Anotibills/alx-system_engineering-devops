#!/usr/bin/env bash
#Script that configures a new Ubuntu machine with Nginx.

# Update package lists
sudo apt-get update

# Install Nginx
sudo apt-get -y install nginx

# Create a simple HTML page with "Hello World!" content
echo "Hello World!" | sudo tee /usr/share/nginx/html/index.html > /dev/null

# Restart Nginx service
sudo service nginx restart

echo "Nginx is installed and configured to display 'Hello World!'"
